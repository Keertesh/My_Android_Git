<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="kt.tech.com.lomaprototypeversion11.Searchnew">
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        custom:pager_animation="Accordion"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:selected_color="#0095BF"
        custom:unselected_color="#55333333"
        custom:selected_drawable="@drawable/bk"
        custom:shape="oval"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        custom:selected_width="6dp"
        custom:selected_height="6dp"
        custom:unselected_width="6dp"
        custom:unselected_height="6dp"
        android:layout_alignBottom="@+id/slider"
        android:layout_centerHorizontal="true" />
    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator2"
        style="@style/AndroidImageSlider_Corner_Oval_Orange"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageView3"
        android:layout_above="@+id/custom_indicator2"
        android:layout_alignLeft="@+id/slider"
        android:layout_alignStart="@+id/slider" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageView4"
        android:layout_above="@+id/imageView8"
        android:layout_alignRight="@+id/space3"
        android:layout_alignEnd="@+id/space3" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageView6"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/custom_indicator2"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quick Search"
        android:id="@+id/textView2"
        android:layout_above="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginBottom="39dp" />

    <Space
        android:layout_width="1000px"
        android:layout_height="90px"
        android:layout_below="@+id/custom_indicator"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_above="@+id/textView2"
        android:id="@+id/space3" />
</RelativeLayout>
