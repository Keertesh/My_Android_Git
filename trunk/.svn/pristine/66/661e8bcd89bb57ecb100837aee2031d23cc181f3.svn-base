<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"

    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/productdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/companyaddressline"
        android:layout_below="@+id/companyaddressline"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="#ff0000"
        android:text="price" />

    <TextView
        android:id="@+id/companyaddressline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment"
        android:layout_below="@+id/comment"
        android:layout_marginTop="16dp"
        android:text="Address"
        android:textColor="#ff0f10ff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />

    <Button
        android:id="@+id/companycallbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/call"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="call"
        android:layout_alignBottom="@+id/productdescription"
        android:layout_toLeftOf="@+id/companydirection"
        android:layout_toStartOf="@+id/companydirection"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <Button
        android:id="@+id/companydirection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/download"
        android:focusable="false"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:onClick="map"
        android:layout_alignTop="@+id/companycallbutton"
        android:layout_alignLeft="@+id/companyRate"
        android:layout_alignStart="@+id/companyRate" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Shop Name"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/companyRate"
        android:textColor="#ffffee"
        android:background="#006600"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/comment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
