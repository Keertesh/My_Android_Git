<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/custom">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fffafa">

        <TextView
            android:id="@+id/companyproductactivityproductname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="15dp"
            android:width="200dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyProductImageview"

            android:maxWidth="350dp"
            android:maxHeight="350dp"
            android:src="@drawable/demo"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/companyproductactivityproductname"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toLeftOf="@+id/companyproductactivityproductname" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/companyproductactivityproductrate"
            android:textColor="#ffffee"
            android:background="#006600"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/companyproductactivityreviewcount"
            android:layout_alignTop="@+id/companyproductactivityproductPrice"
            android:layout_alignRight="@+id/companyproductactivityproductrate"
            android:layout_alignEnd="@+id/companyproductactivityproductrate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews :"
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/companyproductactivityproductPrice"
            android:layout_toLeftOf="@+id/companyproductactivityreviewcount"
            android:layout_toStartOf="@+id/companyproductactivityreviewcount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/companyproductactivityproductMRP"
            android:layout_above="@+id/textView7"
            android:layout_toRightOf="@+id/companyProductImageview"
            android:layout_toEndOf="@+id/companyProductImageview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/companyproductactivityproductPrice"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/companyProductImageview"
            android:layout_toEndOf="@+id/companyProductImageview" />

    </RelativeLayout>


</RelativeLayout>